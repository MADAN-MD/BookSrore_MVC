@page
@model BookStoreWebRazor.Pages.Categories.IndexModel

<h1>Category List</h1>

<div>
    <a asp-page="/Categories/Create"  class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> New
    </a>

</div>
<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">S.N</th>
            <th scope="col">Name</th>
            <th scope="col">Order</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model.CategoryList)
        {
            <tr>
                <th scope="row">@category.Id</th>
                <td>@category.Name</td>
                <td>@category.DisplayOrder</td>
                <td>
                    <div>
                        <a asp-page="/categories/edit"  asp-route-id="@category.Id" class="btn btn-info">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                        <a asp-page="/Categories/Delete"  asp-route-id="@category.Id" class="btn btn-danger">
                            <i class="bi bi-trash"></i> Delete
                        </a>
                    </div>

                </td>
            </tr>

        }
    </tbody>
</table>